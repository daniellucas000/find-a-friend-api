// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Org {
  id              String   @id @default(uuid())
  name            String
  email           String   @unique
  cep             String
  address         String
  whatsapp_number String
  password        String
  created_at      DateTime @default(now())
  pets            Pet[]

  @@map("orgs")
}

model Pet {
  id                 String @id @default(uuid())
  name               String
  about              String
  age                String
  size               String
  energy             String
  level_independence String
  environment        String
  photo              String

  org                  Org                    @relation(fields: [org_id], references: [id])
  org_id               String
  adoptionRequirements AdoptionRequirements[]
  petGalleries         PetGallery[]

  @@map("pets")
}

model PetGallery {
  id     String @id @default(uuid())
  image  String
  pet    Pet    @relation(fields: [pet_id], references: [id])
  pet_id String

  @@map("pet_gallery")
}

model AdoptionRequirements {
  id     String @id @default(uuid())
  title  String
  pet    Pet    @relation(fields: [pet_id], references: [id])
  pet_id String
}
